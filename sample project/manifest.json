{
  "manifest_version": 3,
  "name": "Google Meet Recorder",
  "version": "1.0",
  "description": "Record Google Meet meetings with video + audio",
  "permissions": [
    "tabs",
    "tabCapture",
    "downloads",
    "storage",
    "notifications",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://*/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts":[
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["recorder.html", "recorder.js"],
      "matches": ["<all_urls>", "chrome-extension://*/*"]
    }
  ]
}
